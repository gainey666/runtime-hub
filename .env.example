# Runtime Logger Environment Configuration
# Copy this file to .env and adjust values as needed

# Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database Configuration
DB_TYPE=sqlite
DB_PATH=./data/runtime_monitor.db
DB_BACKUP=true
DB_MAX_CONNECTIONS=10

# Python Agent Configuration
PYTHON_MAX_AGENTS=10
PYTHON_TIMEOUT=30000
PYTHON_RECONNECT_DELAY=5000
PYTHON_MAX_RETRIES=3

# Workflow Engine Configuration
MAX_CONCURRENT_WORKFLOWS=5
WORKFLOW_DEFAULT_TIMEOUT=60000
MAX_NODE_EXECUTION_TIME=30000
WORKFLOW_DEBUG=true

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
ENABLE_FILE_LOGGING=true
LOG_DIRECTORY=./logs
LOG_MAX_FILE_SIZE=10485760
LOG_MAX_FILES=5

# Security Configuration (Low Priority)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_CORS=true
TRUSTED_ORIGINS=http://localhost:3000

# File System Configuration
UPLOAD_DIRECTORY=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.json,.py,.txt,.md

# Node Editor Configuration
NODE_EDITOR_MAX_NODES=100
NODE_EDITOR_MAX_CONNECTIONS=200
NODE_EDITOR_AUTO_SAVE_INTERVAL=300000
NODE_EDITOR_ENABLE_MINIMAP=true
NODE_EDITOR_GRID_SNAP=20

# Error Handling Configuration
ENABLE_GLOBAL_ERROR_HANDLING=true
ENABLE_PROCESS_ERROR_HANDLING=true
ENABLE_UNCAUGHT_EXCEPTION_HANDLING=true
MAX_ERROR_LOG_ENTRIES=1000

# Performance Configuration
ENABLE_METRICS=true
METRICS_INTERVAL=60000
ENABLE_PROFILING=true
MAX_MEMORY_USAGE_MB=512
