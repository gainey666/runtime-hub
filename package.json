{
  "name": "runtime-hub",
  "version": "1.0.0",
  "description": "Desktop hub for monitoring, debugging, and planning code workflows",
  "main": "src/main.js",
  "scripts": {
    "build:css": "tailwindcss -i ./public/styles/input.css -o ./public/styles/tailwind.css --content \"./public/**/*.html,./public/**/*.js,./src/**/*.js\"",
    "start": "npm run build:css && electron .",
    "dev": "npm run build:css && electron . --dev",
    "server": "node src/server.js",
    "api": "node src/auto-clicker-api.js",
    "start:all": "npm run server & npm run api",
    "test:quick": "node test-everything.js",
    "python-example": "cd python-agent && python simple_test.py",
    "install-python": "cd python-agent && pip install -r requirements.txt",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:security": "jest --testPathPattern=tests/security",
    "test:performance": "jest --testPathPattern=tests/performance",
    "lint": "eslint src/ --ext .ts,.js",
    "lint:fix": "eslint src/ --ext .ts,.js --fix",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "format:check": "prettier --check src/**/*.{ts,js,json}",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "validate": "npm run lint && npm run type-check && npm run test",
    "prepare": "husky install"
  },
  "dependencies": {
    "@socket.io/redis-adapter": "^8.3.0",
    "cors": "^2.8.5",
    "electron": "^28.0.0",
    "express": "^4.18.2",
    "redis": "^5.11.0",
    "sharp": "0.34.5",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.3",
    "socket.io-redis": "^5.4.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.29"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.6",
    "@babel/core": "^7.29.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.29.0",
    "@tailwindcss/cli": "4.2.0",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^25.2.3",
    "@types/socket.io": "^3.0.1",
    "@types/socket.io-redis": "^1.0.27",
    "@types/sqlite3": "^3.1.11",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "autoprefixer": "10.4.24",
    "babel-jest": "^30.2.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.0.1",
    "postcss": "8.5.6",
    "prettier": "^3.8.1",
    "supertest": "^6.3.3",
    "tailwindcss": "4.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "runtime",
    "monitoring",
    "debugging",
    "desktop",
    "workflow"
  ],
  "author": "",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,json}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
